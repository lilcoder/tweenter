<br>
<div class="form-signin well" >
<legend class="center">Sign up for Tweenter</legend>

<%= simple_form_for @user do |f| %>
<%= f.input :username, label: false, placeholder: 'Username', input_html: { class: 'form-control' }  %>
<br>
<%= f.input :email, label: false, placeholder: 'Email', input_html: { class: 'form-control' }  %>
<br>
<%= f.input :year_born, label: false, placeholder: 'Year Born', input_html: { class: 'form-control' } %>
<br>
<%= f.input :password, label: false, placeholder: 'Password', input_html: { class: 'form-control' }  %>
<br>
<%= f.input :password_confirmation, label: false, placeholder: 'Repeat Password', input_html: { class: 'form-control' } %>
<br>
<%= f.submit "Sign Up", class: "btn btn-lg btn-primary btn-block" %>
<% end %>

</div>

